{
  "name": "expresswebpacktemplate",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:js": "webpack --hide-modules",
    "serve:dev": "node server.js --ignore app/assets/ --ignore public/",
    "serve:prod": "cross-env NODE_ENV=production node server.js",
    "start": "npm run start:dev",
    "start:dev": "npm-run-all clean build:* -p watch:* serve:dev",
    "start:prod": "npm-run-all clean build:* serve:prod",
    "watch:js": "npm run build:js -- --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@types/express": "^4.11.1",
    "autoprefixer": "^6.7.7",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "cross-env": "^2.0.1",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "express-messages": "^1.0.1",
    "express-session": "^1.15.6",
    "express-validator": "^5.0.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "hard-source-webpack-plugin": "^0.5.18",
    "lusca": "^1.5.2",
    "mongodb": "^3.0.4",
    "mongoose": "^5.0.11",
    "mongoose-timestamp": "^0.6.0",
    "monk": "^6.0.5",
    "node-sass": "^4.9.2",
    "npm-run-all": "^2.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "postcss-loader": "^2.1.3",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "save": "^2.3.2",
    "serve-favicon": "^2.4.5",
    "style-loader": "^0.20.3",
    "webpack": "^3.11.0"
  },
  "devDependencies": {
    "browser-sync": "^2.23.6"
  }
}
